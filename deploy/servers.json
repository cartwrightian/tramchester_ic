{
	"AWSTemplateFormatVersion":"2010-09-09",
		"Description":"NOTE: Make sure vpc ID is added to S3 permissions on the Bucket itself",
	"Parameters":{
	"env":{ "Type":"String" }, 
	"vpc":{ "Type":"String" }, 
	"build":{ "Type":"String" }, 
	"webSubnetA":{ "Type":"String", "Description":"::webSubnetZoneA" }, 
	"webSubnetB":{ "Type":"String", "Description":"::webSubnetZoneB" }, 
	"webSg":{ "Type":"String", "Description":"::sgWeb" }, 
	"webServerName":{ "Type":"String", "Default":"tramchesterWeb" }, 
	"ami":{ "Type":"String", "Default":"ami-000959cf06650d13f" },
	"baseUrl":{ "Type":"String", "Default":"https://s3-eu-west-1.amazonaws.com" },
	"bucketName":{"Type":"String", "Description":"::CFN_TAG"}, 
	"bootstrapCloudInit":{"Type":"String", "Default":"cloudInitAWSLinux.txt"},
	"bootstrapWebScript":{"Type":"String", "Default":"setupTramWebServerAWSLinux.sh"},
	"keypairname": { "Type" : "String" , "Description" : "::CFN_TAG" },
	"TFGMAPIKEY": { "Type" : "String", "Description" : "::ENV", "NoEcho" : "true"},
	"NESSUSINSTALLER": { "Type" : "String", "Description" : "::ENV", "NoEcho" : "true"},
	"NESSUSLINKINGKEY": { "Type" : "String", "Description" : "::ENV", "NoEcho" : "true"},
	"instanceProfile":{"Type":"String", "Description":"::InstanceProfile"} }, 
	"Mappings":{
	"environMap":{
		"Dev":{ "keyName":"tramchester2", "webSize":"t3.medium" },
		"UAT":{ "keyName":"tramchester2", "webSize":"t3.medium" },
		"ProdGreen":{ "keyName":"tramchester2", "webSize":"t3.medium" },
		"ProdBlue":{ "keyName":"tramchester2", "webSize":"t2.micro" }
		}
	},
	"Resources":{
	"webDoneWaitHandle":{
		"Type":"AWS::CloudFormation::WaitConditionHandle", "Properties":{} }, 
	"waitForWebServerCallBack":{
		"Type":"AWS::CloudFormation::WaitCondition", "DependsOn":"TramWebServerA", "Properties":{
			"Handle":{
				"Ref":"webDoneWaitHandle"
			}, "Timeout":"1200", "Count":"1"
		} }, 
	"TramWebServerA":{
		"Type":"AWS::EC2::Instance", "Properties":{
			"KeyName":{ "Ref":"keypairname" }, 
			"InstanceType":{
				"Fn::FindInMap":[
					"environMap", {
						"Ref":"env"
					}, "webSize"
				]
			}, "ImageId":{
				"Ref":"ami"
			}, "IamInstanceProfile":{
				"Ref":"instanceProfile"
			}, "UserData":{
				"Fn::Base64":{
					"Fn::Join":[
						"", [
							"#include", "\n",
							{"Ref":"baseUrl"}, "/", {"Ref":"bucketName"}, "/dist/", {"Ref":"build"}, "/",
								{"Ref":"bootstrapCloudInit"}, "\n",
							{"Ref":"baseUrl"}, "/", {"Ref":"bucketName"}, "/dist/", {"Ref":"build"}, "/",
								{"Ref":"bootstrapWebScript"}, "\n",
							"# WAITURL=", {"Ref":"webDoneWaitHandle"}, "\n",
							"# ENV=", {"Ref":"env"}, "\n",
							"# BUILD=", {"Ref":"build"}, "\n",
							"# BUCKET=", {"Ref":"bucketName"}, "\n",
							"# NESSUS_LINKING_KEY=", {"Ref":"NESSUSLINKINGKEY"}, "\n",
							"# TFGMAPIKEY=", {"Ref":"TFGMAPIKEY"}, "\n"
						]
					]
				}
			}, "SubnetId":{
				"Ref":"webSubnetA"
			}, "SecurityGroupIds":[
				{
					"Ref":"webSg"
				}
			], "Tags":[
				{
					"Key":"Name", "Value":{
					"Fn::Join":[
						"", [
							{
								"Ref":"webServerName"
							}, "A"
						]
					]
				}
				},
					{"Key":"CFN_ASSIST_TYPE", "Value":"web"},
					{"Key":"NESSUS_INSTALLER", "Value": { "Ref":"NESSUSINSTALLER"}},
					{"Key":"ENV", "Value":  { "Ref":"env"}},
					{"Key":"BUILD", "Value": {"Ref":"build"}}
			]
		}
	}, "TramWebServerB":{
		"Type":"AWS::EC2::Instance", "Properties":{
			"KeyName":{ "Ref":"keypairname" },  
			"InstanceType":{
				"Fn::FindInMap":[
					"environMap", {
						"Ref":"env"
					}, "webSize"
				]
			}, "IamInstanceProfile":{
				"Ref":"instanceProfile"
			}, "ImageId":{
				"Ref":"ami"
			}, "UserData":{
				"Fn::Base64":{
					"Fn::Join":[
						"", [
							"#include", "\n",
							{"Ref":"baseUrl"}, "/", {"Ref":"bucketName"}, "/dist/", {"Ref":"build"}, "/",
							{"Ref":"bootstrapCloudInit"}, "\n",
							{"Ref":"baseUrl"}, "/", {"Ref":"bucketName"}, "/dist/", {"Ref":"build"}, "/",
							{"Ref":"bootstrapWebScript"}, "\n",
							"# WAITURL=", {"Ref":"webDoneWaitHandle"}, "\n",
							"# ENV=", {"Ref":"env"}, "\n",
							"# BUILD=", {"Ref":"build"}, "\n" ,
							"# BUCKET=", {"Ref":"bucketName"}, "\n",
							"# NESSUS_LINKING_KEY=", {"Ref":"NESSUSLINKINGKEY"}, "\n" ,
							"# TFGMAPIKEY=", {"Ref":"TFGMAPIKEY"}, "\n"
						]
					]
				}
			}, "SubnetId":{
				"Ref":"webSubnetB"
			}, "SecurityGroupIds":[
				{
					"Ref":"webSg"
				}
			], "Tags":[
				{
					"Key":"Name", "Value":{
					"Fn::Join":[
						"", [
							{
								"Ref":"webServerName"
							}, "B"
						]
					]
				}
				},
					{"Key":"CFN_ASSIST_TYPE", "Value":"web"},
					{"Key":"NESSUS_INSTALLER", "Value": { "Ref":"NESSUSINSTALLER"}},
					{"Key":"ENV", "Value":  { "Ref":"env"}},
					{"Key":"BUILD", "Value": {"Ref":"build"}}
			]
		}
	}
}, "Outputs":{}
}
